import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import java.util.Random;

import javax.imageio.ImageIO;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JOptionPane;
import javax.swing.JPanel;

public class disaster2 extends JFrame{
	BufferedImage img = null;
	private int x, y, earthquake = 0;
	public static int frameFlag = 0;		//frameFlag : 프레임을 1개만 생성해주기위한 플래그
	private JButton bt;
	/*private JLabel powerLabel;				//강도 레이블
	private JTextField powerTextField;		//강도 텍스트필드
	private JButton powerButton;			//강도 버튼
	 */	

	public disaster2(){		//생성자
		setTitle("지진관재 시스템");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 600, 600);
		setVisible(true);
		frameFlag = 1;

		try {
			// 사진은 아래 사진을 이용할것! 
			img = ImageIO.read(new File("C:\\Users\\DB\\eclipse-workspace\\20171207\\map.jpg"));
		}catch(IOException e) {
			System.out.print("no image");
			System.exit(0);
		}

		//지진 발생 버튼 (borderLayout을 이용)
		add(new MyPanel(), BorderLayout.CENTER);
		bt = new JButton("Earthquake Occur");
		bt.addActionListener(new ActionListener() {		//지진 발생 버튼 클릭 시
			// Earthquake Occur가 눌렸을 때 액션
			// 끝 점 확인 ( x = 628 y = 785)
			@Override
			public void actionPerformed(ActionEvent arg0) {
				earthquake++;
				//JOptionPane.showMessageDialog(null, width);

				if(frameFlag == 1) {
					SecondFrame sf = new SecondFrame();
					repaint();
					frameFlag = 0;		//새로운 프레임 재생성 방지.
				}
				
			}
		});
		add(bt, BorderLayout.SOUTH);
		pack();

	}

	public Dimension getPreferredSize() {
		if (img == null) {
			return new Dimension(100,100); //그림 파일이 없을 경우 프레임의 크기를 100,100으로 만든다
		} else {
			return new Dimension(img.getWidth(null), img.getHeight(null)); 
			//그림의 크기에 따라 화면의 크기를 변경한다.
		}
	}

	//panel 영역
	class MyPanel extends JPanel{
		public void paint(Graphics g) {
			g.drawImage(img, 0, 0, null);
			//진원지
			if(earthquake>=1) {
				int width = img.getWidth();			//프레임 가로 사이즈
				int height = img.getHeight();		//프레임 세로 사이즈
				Random ran = new Random();
				x = ran.nextInt(width-40);		//width-40, height-90 해야 원 끝에 딱 걸림
				y = ran.nextInt(height-90);

				g.setColor(Color.RED);
				g.fillOval(x, y, 20, 20);
				//System.out.printf("진원지 : %d %d\n\n", x,y);
			}

			// 서울특별시
			g.setColor(Color.BLUE);
			g.fillOval(220, 145, 15, 15);

			// 경기도
			g.setColor(Color.BLUE);
			g.fillOval(250, 205, 15, 15);

			// 강원도
			g.setColor(Color.BLUE);
			g.fillOval(380, 115, 15, 15);

			// 충청도
			g.setColor(Color.BLUE);
			g.fillOval(270, 305, 15, 15);

			// 전라도
			g.setColor(Color.BLUE);
			g.fillOval(220, 485, 15, 15);

			// 경상도
			g.setColor(Color.BLUE);
			g.fillOval(430, 395, 15, 15);
		}
	}

	/*public void newFrame() {		//새로운 화면 생성
		JFrame secondFrame = new JFrame();		//두번째 창 생성
		secondFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);		//창닫기
		secondFrame.setTitle("지진 발생");
		secondFrame.setLocation(750,200);
		secondFrame.setSize(350,300);
		//secondFrame.getContentPane().setBackground(Color.pink);
		secondFrame.setVisible(true);

		this.powerLabel = new JLabel("강도 :");
		this.powerTextField = new JTextField("");
		this.powerButton = new JButton("확인");

		add(this.powerLabel);
		add(this.powerTextField);
		add(this.powerButton);

		powerLabel.setBounds(20, 40, 70, 25);
		powerTextField.setBounds(85, 40, 150, 25);
		powerButton.setBounds(240, 40, 60, 25);
	}*/

	public static void main(String[] args) {
		disaster2 ds = new disaster2(); 
	}

}
